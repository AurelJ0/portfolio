// Empêcher le scroll du body en arrière-plan lorsqu'on atteint le bas ou le haut de la pop-up//+
popup.addEventListener("wheel", function(event) {//+
    const isAtTop = popup.scrollTop === 0;//+
    const isAtBottom = popup.scrollTop + popup.clientHeight >= popup.scrollHeight;//+
//+
    if ((isAtTop && event.deltaY < 0) || (isAtBottom && event.deltaY > 0)) {//+
        event.stopPropagation(); // Utilisez stopPropagation au lieu de preventDefault//+
    }//+
}, { passive: false });//+
